{{define "title"}}My Gratitude Notes{{end}}

{{define "note-card"}}
<div id="note-{{.ID}}" class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
    <div class="flex justify-between items-start mb-4">
        <div>
            <h3 class="text-xl font-semibold text-gray-800">{{.Title}}</h3>
            <p class="text-sm text-gray-500">{{.Category}} â€¢ {{.CreatedAt}}</p>
        </div>
        <div class="flex space-x-2">
            <button hx-get="/gratitude/edit/{{.ID}}"
                    hx-target="#note-{{.ID}}"
                    hx-swap="afterend"
                    class="text-[#640D5F] hover:text-[#4A0A45]">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
            </button>
            <button hx-delete="/gratitude/update/{{.ID}}"
                    hx-target="#note-{{.ID}}"
                    hx-swap="outerHTML"
                    class="text-red-500 hover:text-red-700">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
            </button>
        </div>
    </div>
    <div class="flex items-center space-x-2 mb-4">
        <span class="text-2xl">{{.Emoji}}</span>
        <p class="text-gray-600">{{.Content}}</p>
    </div>
</div>
{{end}}

{{define "content"}}
<div class="min-h-screen bg-gradient-to-br from-[#FFB200]/5 to-[#640D5F]/5">
    <div class="max-w-4xl mx-auto px-4 py-16">
        <h2 class="text-2xl font-bold text-gray-800 mb-8">My Gratitude Notes</h2>
        
        <div id="notes-list" class="space-y-6">
            {{range .Notes}}
                {{template "note-card" .}}
            {{end}}
        </div>
    </div>
</div>
{{end}} 