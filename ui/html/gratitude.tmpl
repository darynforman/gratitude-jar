{{define "content"}}
<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Add New Note Form -->
    <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4">Add New Gratitude Note</h2>
        <form hx-post="/gratitude/create" 
              hx-target="#notes-list" 
              hx-swap="afterbegin"
              class="space-y-4">
            <div>
                <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
                <input type="text" 
                       id="title" 
                       name="title" 
                       required
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
            </div>
            <div>
                <label for="content" class="block text-sm font-medium text-gray-700">Content</label>
                <textarea id="content" 
                          name="content" 
                          rows="4" 
                          required
                          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"></textarea>
            </div>
            <div>
                <label for="category" class="block text-sm font-medium text-gray-700">Category</label>
                <select id="category" 
                        name="category"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                    <option value="personal">Personal</option>
                    <option value="work">Work</option>
                    <option value="family">Family</option>
                    <option value="achievements">Achievements</option>
                </select>
            </div>
            <button type="submit" 
                    class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                Save Note
            </button>
        </form>
    </div>

    <!-- Notes List -->
    <div id="notes-list" class="space-y-4">
        {{range .Notes}}
        <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="flex justify-between items-start">
                <h3 class="text-xl font-semibold text-gray-900">{{.Title}}</h3>
                <span class="px-2 py-1 text-xs font-semibold rounded-full 
                           {{if eq .Category "personal"}}bg-blue-100 text-blue-800
                           {{else if eq .Category "work"}}bg-green-100 text-green-800
                           {{else if eq .Category "family"}}bg-purple-100 text-purple-800
                           {{else}}bg-yellow-100 text-yellow-800{{end}}">
                    {{.Category}}
                </span>
            </div>
            <p class="mt-2 text-gray-600">{{.Content}}</p>
            <div class="mt-4 flex justify-between items-center text-sm text-gray-500">
                <span>{{.CreatedAt}}</span>
                <div class="space-x-2">
                    <button hx-get="/gratitude/edit/{{.ID}}" 
                            hx-target="#edit-form"
                            class="text-indigo-600 hover:text-indigo-900">Edit</button>
                    <button hx-delete="/gratitude/{{.ID}}"
                            hx-target="#notes-list"
                            hx-swap="outerHTML"
                            class="text-red-600 hover:text-red-900">Delete</button>
                </div>
            </div>
        </div>
        {{end}}
    </div>
</div>
{{end}} 